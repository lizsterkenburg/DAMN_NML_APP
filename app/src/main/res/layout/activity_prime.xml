<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticeActivity">


    <include
        android:id="@+id/include3"
        layout="@layout/titlebar_basic_layout"
        android:layout_marginTop="380dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/verb_prime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listen to the description"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_show_prime"
        app:layout_constraintVertical_bias="0.446" />

    <ImageView
        android:id="@+id/imageView_show_prime"
        android:layout_width="395dp"
        android:layout_height="464dp"
        app:layout_constraintBottom_toBottomOf="@+id/include3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/include3"
        app:srcCompat="@drawable/logo_damn___small" />


</androidx.constraintlayout.widget.ConstraintLayout>